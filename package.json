{
  "name": "fractal6",
  "version": "1.0.0",
  "description": "Organisation for Humans",
  "main": "public/index.html",
  "scripts": {
    "start": "npm run build && npm run mydev",
    "build": "npm run build:elm-spa && npm run build:elm",
    "build:elm-spa": "elm-spa build .",
    "build:elm": "elm make src/Main.elm --output public/dist/elm.js",
    "dev": "npm run build && concurrently --raw --kill-others \"npm run dev:elm-spa\" \"npm run dev:elm\"",
    "mydev": "npm run build && concurrently --raw --kill-others \"npm run js_build:watch\" \"npm run css_build:watch\" \"npm run dev:elm-spa\" \"npm run dev:elm\"",
    "dev:elm-spa": "chokidar src/Pages -c \"npm run build:elm-spa\"",
    "dev:elm": "elm-live src/Main.elm -u -d public -- --debug --output public/dist/elm.js",
    "mybuild": "npm run css_build && npm run js_build",
    "css_build:watch": "chokidar assets/sass/ -c \"npm run css_build\"",
    "js_build:watch": "chokidar assets/js -c \"npm run js_build\"",
    "css_build": "for k in light dark; do node-sass --omit-source-map-url assets/sass/$k.scss public/$k.css; done",
    "js_build": "cp -v assets/js/*.js public/",
    "graphql_build": "./node_modules/.bin/elm-graphql --schema-file ../schema/gen2/schema.graphql --base Fractal --output ./src"
  },
  "keywords": [
    "graphql",
    "elm",
    "fractal",
    "organisation",
    "spa"
  ],
  "author": "Adrien Dulac",
  "license": "TBD",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.13.0",
    "bulma-badge": "^3.0.1",
    "bulma-tooltip": "^3.0.2",
    "d3": "^5.16.0",
    "d3-scale": "^3.2.1",
    "elm": "0.19.1-3",
    "minisearch": "^2.3.1"
  },
  "devDependencies": {
    "@dillonkearns/elm-graphql": "^4.0.2",
    "bulma": "^0.8.2",
    "bulma-modal-fx": "^1.1.1",
    "chokidar-cli": "2.1.0",
    "concurrently": "5.2.0",
    "elm-live": "4.0.2",
    "elm-spa": "4.1.0",
    "node-sass": "^4.14.1",
    "uglify-js": "^3.9.4"
  }
}
