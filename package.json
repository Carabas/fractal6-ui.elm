{
  "name": "fractal6",
  "version": "1.0.0",
  "description": "Organisation for Humans",
  "main": "public/index.html",
  "scripts": {
    "start": "npm run build && npm run dev",
    "build": "npm run build:elm-spa && npm run build:elm",
    "build:elm-spa": "elm-spa build .",
    "build:elm": "elm make src/Main.elm --output public/dist/elm.js",
    "dev": "npm run build && concurrently --raw --kill-others \"npm run js_build:watch\" \"npm run css_build:watch\" \"npm run dev:elm-spa\" \"npm run dev:elm\"",
    "dev:elm-spa": "chokidar src/Pages -c \"npm run build:elm-spa\"",
    "dev:elm": "elm-live src/Main.elm -u -d public -- --debug --output public/dist/elm.js",
    "mybuild": "npm run css_build && npm run js_build",
    "css_build:watch": "chokidar assets/sass/ -c \"npm run css_build\"",
    "js_build:watch": "chokidar assets/js -c \"npm run js_build\"",
    "css_build": "for k in dark; do node-sass --omit-source-map-url assets/sass/$k.scss public/$k.css; done",
    "js_build": "cp -v assets/js/*.js public/",
    "graphql_build": "./node_modules/.bin/elm-graphql --schema-file ../schema/gen2/schema.graphql --base Fractal --output ./src",
    "webdev": "webpack-dev-server --hot --port 8000 --mode development",
    "prod": "webpack --mode production"
  },
  "keywords": [
    "graphql",
    "elm",
    "fractal",
    "organisation",
    "d3",
    "spa"
  ],
  "author": "Adrien Dulac",
  "license": "TBD",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.13.0",
    "@dillonkearns/elm-graphql": "^4.0.2",
    "bulma": "^0.8.2",
    "bulma-badge": "^3.0.1",
    "bulma-modal-fx": "^1.1.1",
    "bulma-tooltip": "^3.0.2",
    "d3": "^5.16.0",
    "d3-scale": "^3.2.1",
    "elm": "0.19.1-3",
    "minisearch": "^2.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.10.4",
    "autoprefixer": "^9.8.4",
    "babel-loader": "^8.1.0",
    "chokidar-cli": "2.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "concurrently": "5.2.0",
    "copy-webpack-plugin": "^6.0.3",
    "css-loader": "^3.6.0",
    "elm-hot-webpack-loader": "^1.1.6",
    "elm-live": "4.0.2",
    "elm-spa": "4.1.0",
    "elm-webpack-loader": "^6.0.1",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "^4.3.0",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.14.1",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "postcss-loader": "^3.0.0",
    "postcss-safe-parser": "^4.0.2",
    "sass-loader": "^9.0.1",
    "style-loader": "^1.2.1",
    "uglify-js": "^3.9.4",
    "uglifyjs-webpack-plugin": "^1.3.0",
    "url-loader": "^4.1.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^5.0.7"
  }
}
