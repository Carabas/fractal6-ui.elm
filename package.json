{
  "name": "my-elm-spa-project",
  "version": "1.0.0",
  "description": "learn more at https://elm-spa.dev",
  "scripts": {
    "start": "npm install && npm run dev",
    "dev": "npm run elm:spa:build && npm run build:watch",
    "build": "npm run css_build && npm run js_build  && npm run build-elm",
    "build-elm": "npm run elm:spa:build && npm run elm:compile",
    "build:watch": "concurrently --raw --kill-others \"npm run elm:spa:watch\" \"npm run elm:live\" \"npm run css_build:watch\" \"npm run js_build:watch\"",
    "elm:compile": "elm make src/Main.elm --output=public/dist/elm.compiled.js --optimize",
    "elm:live": "elm-live src/Main.elm --dir=public --start-page=index.html --open --pushstate --port=1234 -- --output=public/dist/elm.compiled.js --debug",
    "elm:spa:build": "elm-spa build .",
    "elm:spa:watch": "chokidar src/Pages -c \"npm run elm:spa:build\"",
    "css_build:watch": "chokidar assets/sass/**.scss -c \"npm run css_build\"",
    "js_build:watch": "chokidar assets/js/**.js -c \"npm run js_build\"",
    "css_build": "for k in light dark; do node-sass --omit-source-map-url assets/sass/$k.scss public/$k.css; done",
    "js_build": "cp -v assets/js/*.js public/",
    "grapql-build": "./node_modules/.bin/elm-graphql https://localhost:3000 --base Fractal6 --output ./src --header 'headerKey: header value'"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.12.1",
    "bulma-badge": "^3.0.1",
    "bulma-tooltip": "^3.0.2",
    "d3": "^5.15.0",
    "d3-scale": "^3.2.1"
  },
  "devDependencies": {
    "@dillonkearns/elm-graphql": "^4.0.0",
    "bulma": "^0.8.0",
    "chokidar-cli": "2.1.0",
    "concurrently": "5.0.0",
    "elm": "0.19.1-3",
    "elm-live": "4.0.1",
    "elm-spa": "3.0.3",
    "node-sass": "^4.13.1"
  }
}
